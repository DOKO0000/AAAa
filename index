<body>
    <h1>Inicio de Sesión</h1>
    <input type="text" id="usuarioInput" placeholder="Ingresa tu usuario">
    <input type="password" id="contrasenaInput" placeholder="Ingresa tu contraseña">
    <button onclick="iniciarSesion()">Iniciar Sesión</button>
    <div id="mensajeError"></div>
    
    <script>
        function iniciarSesion() {
            const usuario = document.getElementById('usuarioInput').value;
            const contrasena = document.getElementById('contrasenaInput').value;
            const mensajeError = document.getElementById('mensajeError');

            // Simulación de validación de usuario
            if (usuario === "usuarioEjemplo" && contrasena === "contrasenaEjemplo") {
                // Redirigir a la página principal
                window.location.href = "/index (3).html"; // Cambia esto a la URL correcta
            } else {
                mensajeError.textContent = "Usuario o contraseña incorrectos. Inténtalo de nuevo.";
                mensajeError.style.display = "block";
            }
        }
    </script>

